<h1 class="col-md-offset-4 col-md-4">Edytuj zamówienie</h1>
<%= form_for @order do |f| %>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Opis:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_area :description, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Typ urządzenia:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :type_of_device, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Producent:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :manufacturer, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Model:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :model, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Numer seryjny:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :serial_number, class: "form-control" %>
  </div>
</div>

<% if @order.status == "nowe" and @order.user_id == current_user.id %>
<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Termin realizacji:</label>
  <div class="col-md-offset-4 col-md-4"> 
  <%= f.select(:term, options_for_select([['Wybierz termin realizacji', @order.term], ['7 dni', '7'], ['5 dni', '5'] , ['3 dni', '3']])) %>
  </div>
</div>
<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Status:</label>
  <div class="col-md-offset-4 col-md-4"> 
  <%= f.select(:status, options_for_select([['Wybierz status', @order.status], ['Anuluj zamówienie', 'anulowane']])) %>
  </div>
</div>
<% end %>

<div class="form-group">
    <div class="col-md-offset-4 col-md-4">
    <br />
    <%= f.submit "Zapisz", class: "btn btn-danger col-md-12" %>
    </div>
</div>

<% end %>