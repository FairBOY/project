<div class="form-group">
    <div class="col-md-offset-4 col-md-4">
      <h2>Rejestracja</h2>
    </div>
  </div>
<br />
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
    <label for="inputEmail3" class="col-md-offset-4 col-md-4">* E-mail</label>
    <div class="col-md-offset-4 col-md-4">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

<div class="form-group">
    <label for="inputPassword3" class="col-md-offset-4 col-md-4">* Hasło</label>
    <div class="col-md-offset-4 col-md-4">
      <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> minimalnych znaków)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-md-offset-4 col-md-4">* Powtórz hasło</label>
    <div class="col-md-offset-4 col-md-4">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
  <label class="col-md-offset-4 col-md-4">* Imię:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :first_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">* Nazwisko:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :last_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Adres:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :address, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Telefon:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :phone, class: "form-control" %>
  </div>
</div>

  <div class="form-group">
    <div class="col-md-offset-4 col-md-4"><br />
      <%= f.submit "Zarejestruj się", class: "btn btn-primary col-md-12" %>
    </div>
  </div>
<% end %>