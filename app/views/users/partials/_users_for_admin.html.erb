<h1>Wszystkie użytkownicy</h1>
<% if @users.empty? %>
<b>Niema użytkowników serwisu</b>
<% else %>
<table class="table table-hover">
	<tr>
		<th>ID</th>
		<th>Email</th>
		<th>Imię</th>
		<th>Nazwisko</th>
		<th>Adres</th>
		<th>Telefon</th>
		<th>Rola</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @users.each do |f| %>

	<tr>
		<td><%= f.id %></td>
		<td><%= f.email %></td>
		<td><%= f.first_name %></td>
		<td><%= f.last_name %></td>
		<td><%= f.address %></td>
		<td><%= f.phone %></td>
		<td><%= f.role %></td>
		<td><%= link_to "Pokaż", user_path(f), class: "btn btn-info" %></td>
		<td><%= link_to "Edytuj", edit_user_path(f), class: "btn btn-warning" %></td>
		<td><%= link_to "Usuń", user_path(f), class: "btn btn-danger", method: :delete, data: { confirm: "Jesteś pewien że chcesz usunąć użytkownika?" } %>
		</td>
	</tr>

<% end %>
<% end %>

</table>