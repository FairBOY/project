<% if current_user.role == "admin" %>
<%= render partial: "users/partials/edit_for_admin" %>
<% else %>

<%= form_for @user do |f| %>

<div class="form-group">
  <label for="inputEmail3" class="col-md-offset-4 col-md-4">E-mail:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.email_field :email, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">ImiÄ™:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :first_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Nazwisko:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :last_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Adres:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :address, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label class="col-md-offset-4 col-md-4">Telefon:</label>
  <div class="col-md-offset-4 col-md-4">
  <%= f.text_field :phone, class: "form-control" %>
  </div>
</div>

<div class="form-group">
    <div class="col-md-offset-4 col-md-4">
    <br />
		<%= f.submit "Zapisz", class: "btn btn-danger col-md-12" %>
    </div>
</div>
<% end %>
<% end %>