<% if current_user.role == "admin" %>
<%= render partial: "users/partials/users_for_admin" %>
<% else %>

<h1>Wszystkie użytkowniki</h1>
<% if @users.empty? %>
<b>Niema użytkowników serwisu</b>
<% else %>
<table class="table table-hover">
	<tr>
		<th>ID</th>
		<th>Email</th>
		<th>Imię</th>
		<th>Nazwisko</th>
		<th>Adres</th>
		<th>Telefon</th>
		<th>Rola</th>
		<th></th>
	</tr>

	<% @users.each do |f| %>

	<tr>
		<td><%= f.id %></td>
		<td><%= f.email %></td>
		<td><%= f.first_name %></td>
		<td><%= f.last_name %></td>
		<td><%= f.address %></td>
		<td><%= f.phone %></td>
		<td><%= f.role %></td>
		<td><%= link_to "Pokaż", user_path(f), class: "btn btn-warning" %></td>
	</tr>

<% end %>
<% end %>

</table>
<% end %>